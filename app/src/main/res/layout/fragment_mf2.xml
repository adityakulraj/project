<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="aarnav100.developer.bankapp.fragments.MF2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="EQUITY FUND"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="-17dp"
            tools:layout_editor_absoluteY="55dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="275dp"
            app:srcCompat="@drawable/mf2" />
        <TextView
            android:id="@+id/editText2"

            android:layout_width="match_parent"
            android:layout_height="337dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="\n\nDetailed information of the product and\nthe service...\n\n__________________________________\n\n_________________________________\n\n_________________________________\n\n_________________________________"
            android:gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>

