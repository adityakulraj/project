<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aarnav100.developer.bankapp.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="TextView" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/content_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">
            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                app:fillColor="#FFFFFFFF"
                app:pageColor="#00000000"
                app:radius="3dp"
                app:slideInterval="3000"
                app:strokeColor="#FF777777"
                app:strokeWidth="1dp"
                android:layout_weight="0.02" />
            <LinearLayout
                android:layout_margin="5dp"
                android:background="@drawable/rect"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:text="Loans"
                    android:textSize="25dp"

                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View

                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="4px"/>
                <LinearLayout
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/loans"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp" />
                    <ImageView
                        android:src="@drawable/loans1"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp" />
                    <ImageView
                        android:src="@drawable/loans2"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp" />
                    <ImageView
                        android:id="@+id/gs1"
                        android:layout_gravity="center"
                        android:src="@drawable/greatersign"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rect"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:text="Mutual Funds"
                    android:textSize="25dp"

                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View

                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="4px"/>
                <LinearLayout
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/mutual1"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp" />
                    <ImageView
                        android:src="@drawable/mutual2"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp" />
                    <ImageView
                        android:src="@drawable/mutual3"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp" />
                    <ImageView
                        android:id="@+id/gs2"
                        android:layout_gravity="center"
                        android:src="@drawable/greatersign"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rect"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:text="Insurance Policies"
                    android:textSize="25dp"

                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View

                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="4px"/>
                <LinearLayout
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/insurance1"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp" />
                    <ImageView
                        android:src="@drawable/insurance2"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp" />
                    <ImageView
                        android:src="@drawable/insurance3"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp" />
                    <ImageView
                        android:id="@+id/gs3"
                        android:layout_gravity="center"
                        android:src="@drawable/greatersign"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Contact Us: XYZ Lane , Delhi\n9999XXXX99"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Contact Us : XYZ Lane, Delhi\n9999XXXX99\n teamdcoder@gmail.com"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
